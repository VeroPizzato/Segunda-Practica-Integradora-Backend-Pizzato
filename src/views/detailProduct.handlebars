<div class="container my-4">
    <div class="row align-items-center align-self-center">
        <div class="col-md-5 offset-md-1">
            <img src={{product.thumbnail}} alt={{product.title}} class="img-fluid"/>           
        </div>
        <div class="col-md-5 text-center">
            <h2>{{product.title}}</h2>            
            <h3>$ {{product.price}}</h3>
            <h5>Stock Disponible: {{product.stock}}</h5>
            <p>{{product.description}}</p>
            <a href="/products/addCart/{{product._id}}" id="btn-addCart" class="btn btn-secondary text-decoration text-center">Agregar al Carrito</a>
        </div>
    </div>
</div>